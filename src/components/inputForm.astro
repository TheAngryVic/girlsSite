---
interface Props {
  name: string;
  type: "number" | "text" | "password" | "email" | "tel";
  _class: string;
}

const { name, type, _class } = Astro.props;
---

<div>
  <input type={type} class={_class} name={name} />
</div>

<style>
  ._inputCustom {
    width: 100%;
    padding: 10px;
    margin: 10px 0;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    font-size: 16px;
    background-color: #f8f8f8;
    color: #000;
    font-weight: 500;
    font-family: "Roboto", sans-serif;
    outline: none;
    transition: 0.3s;
    &:focus {
      border: 1px solid #000;
    }
    &::placeholder {
      color: #000;
      font-weight: 500;
      font-family: "Roboto", sans-serif;
    }
    &.error {
      border: 1px solid #ff0000;
    }
    &.success {
      border: 1px solid #00ff00;
    }
    &.warning {
      border: 1px solid #ffcc00;
    }
    &.info {
      border: 1px solid #00ccff;
    }
    &.disabled {
      border: 1px solid #ccc;
      background-color: #ccc;
      color: #000;
    }
    &.readonly {
      border: 1px solid #ccc;
      background-color: #f8f8f8;
      color: #000;
    }
    &.required {
      border: 1px solid #ff0000;
    }
    &.optional {
      border: 1px solid #00ff00;
    }
    &.valid {
      border: 1px solid #00ff00;
    }
    &.invalid {
      border: 1px solid #ff0000;
    }
    &.warning {
      border: 1px solid #ffcc00;
    }
    &.info {
      border: 1px solid #00ccff;
    }
    &.primary {
      border: 1px solid #0000ff;
    }
    &.secondary {
      border: 1px solid #ff00ff;
    }
    &.dark {
      border: 1px solid #000;
    }
    &.light {
      border: 1px solid #fff;
    }
    &.white {
      border: 1px solid #fff;
    }
  }
</style>
